if [[ -s "/usr/share/doc/cdargs/examples/cdargs-bash.sh" ]] ; then source "/usr/share/doc/cdargs/examples/cdargs-bash.sh" ; fi
# make sure subl and smerge are available on windows envs
# if [[ -x "$(command -v subl.exe)" ]]; then alias subl="subl.exe" ; fi
# if [[ -x "$(command -v smerge.exe)" ]]; then alias smerge="smerge.exe" ; fi

export EDITOR="vim"

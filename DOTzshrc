zeal-docs-fix() {
  pushd "/mnt/c/Users/Jan Krutisch/AppData/Local/Zeal/Zeal/docsets" >/dev/null || return
    find . -iname 'react-main*.js' -exec rm '{}' \;
	    popd >/dev/null || exit
}


